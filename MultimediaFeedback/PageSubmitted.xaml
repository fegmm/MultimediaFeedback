<Page x:Class="MultimediaFeedback.PageSubmitted"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultimediaFeedback"
      mc:Ignorable="d" 
      d:DesignHeight="492" d:DesignWidth="800"
      Title="PageSubmitted">

    <Grid>
        <Label Name="labelHeader" Content="Dein Feedback (A-Godi)" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="40" Width="794" HorizontalContentAlignment="Center"/>
        <Label Name="labelMessage" Content="..." HorizontalAlignment="Left" Margin="0,161,0,0" VerticalAlignment="Top" FontSize="30" Width="794" HorizontalContentAlignment="Center" Height="118" Foreground="ForestGreen"/>

        <Button Name="buttonAgain" Content="Weiteres Feedback" HorizontalAlignment="Left" Margin="169,357,0,0" VerticalAlignment="Top" Width="168" Height="40" Click="again_clicked" FontSize="16" />
        <Button Name="buttonClose" Content="Beenden" HorizontalAlignment="Left" Margin="365,343,0,0" VerticalAlignment="Top" Width="247" Height="66" Click="close_clicked" Background="#FF00BB00" IsDefault="True"  FontSize="22" />
    </Grid>
</Page>
